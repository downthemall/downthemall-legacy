<?xml-stylesheet href="chrome://global/skin" type="text/css"?>
<?xml-stylesheet href="chrome://dta/skin/preferences/style.css"?>
<?xml-stylesheet href="chrome://dta-platform/skin/preferences.css"?>

<!DOCTYPE prefwindow [
	<!ENTITY % globalDTD SYSTEM "chrome://global/locale/global.dtd">
	%globalDTD;
	<!ENTITY % prefpanesDTD SYSTEM "chrome://dta/locale/prefpanes.dtd">
	%prefpanesDTD;
	<!ENTITY % commonDTD SYSTEM "chrome://dta/locale/common.dtd">
	%commonDTD;
]>

<prefwindow
	id="DownThemAll"
	xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul" 
	windowtype="DTA:Preferences"
	title="&dtaPreferences.title;" 
	buttons="accept,cancel,extra2"
	buttonlabelextra2="&buttonlabelextra2;"
	ondialogextra2="Prefs.restoreAll();"
	ondialoghelp="Prefs.showHelp();"
	persist="lastSelected screenX screenY"
	onload="Prefs.load();"
	style="&winstyle;"
	>
	<stringbundle id="stringB" src="chrome://dta/locale/common.properties" />
	<stringbundle id="stringB" src="chrome://dta/locale/prefpanes.properties" />
	
	<prefpane id="paneMain" label="&mainpane.label;" src="chrome://dta/content/preferences/mainPane.xul" />
	<prefpane id="paneFilters" label="&filterspane.label;" src="chrome://dta/content/preferences/filtersPane.xul" />
	<prefpane id="panePrivacy" label="&privacypane.label;" src="chrome://dta/content/preferences/privacyPane.xul" />
	<prefpane id="paneInterface" label="&uipane.label;" />
	<prefpane id="paneAdvanced" label="&advancedpane.label;" src="chrome://dta/content/preferences/advPane.xul" />
	
	<script type="application/x-javascript" src="chrome://dta/content/common/overlayFunctions.js"/>
	<script type="application/javascript;version=1.7" src="chrome://dta/content/common/internalFunctions.js"/>
	<script type="application/javascript;version=1.7" src="chrome://dta/content/preferences/prefs.js"/>
	<script type="application/x-javascript" src="chrome://help/content/contextHelp.js"/>	
</prefwindow>