<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<?xml-stylesheet href="chrome://dta/skin/common/style.css" type="text/css" ?>

<!DOCTYPE window [
	<!ENTITY % globalDTD SYSTEM "chrome://global/locale/global.dtd">
	%globalDTD;
	<!ENTITY % renamingDTD SYSTEM "chrome://dta/locale/renamingmask.dtd">
	%renamingDTD;
]>

<dialog
	xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul" 
	title="&title;" 
	id="DownThemAll"
	width="520" height="230" 
	persist="screenX screenY"
	onload="Dialog.load();"
	ondialogaccept="Dialog.accept();" 
	buttons="accept, cancel" 
	>
	<script type="application/x-javascript" src="chrome://dta/content/common/overlayFunctions.js"/>
	<script type="application/javascript"><![CDATA[
		var Dialog = {
			load: function() {
				this.result = window.arguments[0];
			},
			accept: function() {
				var dd = document.getElementById('renaming');
				if (dd.value.length) {
					this.result.value = dd.value;
				}
			}
		};	
	]]></script>

	<script type="application/x-javascript" src="chrome://global/content/nsDragAndDrop.js"/>
	<script type="application/x-javascript" src="chrome://global/content/nsTransferable.js"/> 
	
	<stringbundleset>
		<stringbundle id="strings" src="chrome://dta/locale/renamingmask.properties"/>
	</stringbundleset>

	<keyset>
		<key keycode="VK_ESCAPE" oncommand="self.close();"/>
	</keyset>
	
	<dialogheader id="logo" class="renamingmask" chromedir="&locale.dir;">
		<image/>
		<label class="dialogheader-title" value="&title;"/>
	</dialogheader>

	<vbox id="renamingbox" style="margin:8px;" >
		<description>&choose.desc;</description>
		<hbox>
			<saveddropdown id="renaming" preference="renaming" flex="1" tooltiptext="&mask.tip;"/>
			<maskbutton/>
		</hbox>
	</vbox>
</dialog>